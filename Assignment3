/*
 * Author: Subhash
 * Write a code using loops to print following pattern.
 *  1
 *  12
 *  123
 *  1234
 *  12345
 *  1234
 *  123
 *  12
 *  1
 */
public class Assignment3 {
	public static void main(String[] args) {
		int i=1;
		while(i<=5){
			int j=1;
			while(j<=i){
				System.out.print(j);
				j++;
			}
			System.out.println();
			i++;
		}
		i=i-2;
		while(i>0){
		  int j=1;
		  while(j<=i){
			  System.out.print(j);
			  j++;
		  }
		  System.out.println();
			i--;
	  }

	}

}
